{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2020",
        "module": "NodeNext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "experimentalDecorators": true,
        "resolveJsonModule": true
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
    ]
}